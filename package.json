{
  "name": "@eleso/selenium-mcp-server",
  "version": "1.0.0",
  "description": "Autonomous Selenium MCP server with comprehensive UI analysis and cross-browser testing capabilities",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist reports",
    "install:drivers": "node scripts/install-drivers.js",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "postinstall": "npm run install:drivers"
  },
  "keywords": [
    "selenium",
    "mcp",
    "browser-automation",
    "ui-testing",
    "accessibility",
    "performance",
    "cross-browser",
    "autonomous",
    "analysis",
    "quality-assurance"
  ],
  "author": "Eleso Solutions <support@ifinsta.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DagiiM/selenium-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/DagiiM/selenium-mcp-server/issues"
  },
  "homepage": "https://github.com/DagiiM/selenium-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "selenium-webdriver": "^4.25.0",
    "axe-core": "^4.10.0",
    "sharp": "^0.33.5",
    "canvas": "^2.11.2",
    "yargs": "^17.7.2",
    "winston": "^3.15.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "fs-extra": "^11.2.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/jest": "^29.5.13",
    "@types/selenium-webdriver": "^4.1.26",
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "bin": {
    "selenium-mcp-server": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  }
}