# Environment Configuration

# Browser Configuration
SELENIUM_BROWSER_TYPES=chrome,firefox,edge
SELENIUM_MAX_CONCURRENT_BROWSERS=3
SELENIUM_HEADLESS=false
SELENIUM_WINDOW_SIZE=1920,1080
SELENIUM_TIMEOUT=30000
SELENIUM_PAGE_LOAD_TIMEOUT=60000

# Analysis Settings
ANALYSIS_SCREENSHOT_DIR=./reports/screenshots
ANALYSIS_REPORT_DIR=./reports/analysis
ANALYSIS_ENABLE_VISUAL_ANALYSIS=true
ANALYSIS_ENABLE_ACCESSIBILITY=true
ANALYSIS_ENABLE_PERFORMANCE=true

# Performance Thresholds
PERFORMANCE_MAX_LOAD_TIME=3000
PERFORMANCE_TARGET_FCP=1500
PERFORMANCE_TARGET_LCP=2500
PERFORMANCE_TARGET_CLS=0.1
PERFORMANCE_TARGET_FID=100

# Accessibility Standards
ACCESSIBILITY_WCAG_LEVEL=AA
ACCESSIBILITY_INCLUDE_EXPERIMENTAL=true
ACCESSIBILITY_COLOR_CONTRAST_RATIO=4.5

# Visual Analysis Settings
VISUAL_DIFF_THRESHOLD=0.1
VISUAL_COLOR_ANALYSIS=true
VISUAL_LAYOUT_ANALYSIS=true
VISUAL_RESPONSIVE_BREAKPOINTS=320,768,1024,1440,1920

# Resource Management
RESOURCE_MAX_MEMORY_USAGE=2147483648
RESOURCE_MAX_CPU_USAGE=80
RESOURCE_CLEANUP_INTERVAL=300000
RESOURCE_BROWSER_LIFETIME=1800000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./reports/logs/selenium-mcp.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Development Settings
NODE_ENV=development
DEBUG=selenium-mcp:*
DEVELOPMENT_VERBOSE_ERRORS=true